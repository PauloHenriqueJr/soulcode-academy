<%- include('../partials/systemHeader'); %>
<div class="container">
  <div class="row">
      <div class="col">
          <h1 class="mt-5">System Register:</h1>
          <form action="/system/add" method="POST">
              <div class="form-group">
                  <label for="name">Full name:</label>
                  <input class="form-control" type="text" id="name" name="name" required>
              </div>
              <div class="form-group">
                  <label for="email">E-mail:</label>
                  <input class="form-control" type="email" id="email" name="email">
              </div>
              <div class="form-group">
                  <label for="phone">Phone number:</label>
                  <input class="form-control" type="text" id="phone" name="phone">
              </div>

              <button class="btn btn-primary" onclick="formValidation(event)" type="submit">Add interest</button>
          </form>
      </div>
  </div>
</div>
<%- include('../partials/systemFooter'); %>