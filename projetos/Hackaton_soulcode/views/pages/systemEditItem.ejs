<%- include('../partials/systemHeader'); %>
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="mt-5">System edit:</h1>
                <form action="/system/editItem" method="POST">
                    <div class="form-group">
                        <label for="name">Full name:</label>
                        <input class="form-control" type="text" id="name" name="name" value="<%= item.name %>">
                    </div>
                    <div class="form-group">
                        <label for="email">E-mail:</label>
                        <input class="form-control" type="email" id="email" name="email" value="<%= item.email %>">
                    </div>
                    <div class="form-group">
                        <label for="phone">Phone number:</label>
                        <input class="form-control" type="text" id="phone" name="phone" value="<%= item.phone %>">
                    </div>
                    <input type="hidden" name="id" value="<%= item._id %>" />
                    <button class="btn btn-primary" onclick="formValidation(event)" type="submit">Save changes</button>
                </form>
            </div>
        </div>
    </div>

    <%- include('../partials/systemFooter'); %>